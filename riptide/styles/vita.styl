// noop.pw
@require _solarized
@require _typeface
@require _axis

body.vita
  background $base03
  letter-spacing 0px

  main
    max-width 800px
    margin 0 auto
    background #fff
    padding 10px 50px
    border-top 10px solid $blue

  h1, h2, h3
    font-family 'Montserrat'

  section
    h1
      color $blue
      display inline-block
      padding-top 0.1em
      text-transform uppercase
      font-size 1.2em
      letter-spacing 0.1em
      margin 20px 0 10px
    h2
      font-size 1.2em

    p
      text-align justify

    ul
      reset-list()

    > ul > li
      display flex
      margin-bottom 20px
      // font-weight 300
      h3
        margin 0
        font-size 1.2em

      aside
        width 30%
        margin-right 20px
        flex-shrink 0
        p, h2
          margin 0
        p.dates
          font-weight 400
        p.position
          border-left 3px solid $blue
          line-height normal
          margin 5px 0
          padding-left 9px
          text-align left
          font-weight 500

        ul.tags
          padding-left 12px
          color $base02

  section.info
    display flex
    div
      flex 1
    dl
      margin 0
      dt
        display none

  section.cover
    padding-right 30%
    p
      margin 0

  section.skills
    > ul
      display flex
      > li
        display block
        margin-right 30px
        flex 1
        &:last-child
          margin-right 0
        ul
          display flex
          flex-direction column
        i
          font-style normal
          float right
          font-size 1.2em
          letter-spacing 2px
          color $blue
